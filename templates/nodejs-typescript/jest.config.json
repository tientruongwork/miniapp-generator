{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**"
  ],
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ],
  "testPathIgnorePatterns": [
    "node_modules"
  ],
  "transform": {
    "\\.ts?$": "ts-jest"
  }
}