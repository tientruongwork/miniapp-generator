{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**"
  ],
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/src/index.tsx"
  ],
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ],
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/src/setupTest.ts"
  ],
  "testPathIgnorePatterns": [
    "node_modules"
  ],
  "transform": {
    "\\.ts(x)?$": "ts-jest"
  }
}
